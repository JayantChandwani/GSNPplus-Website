{
  "compilerOptions": {
    "target": "ESNext", // Specify ECMAScript target version
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ], // Library for DOM and modern JavaScript
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip type-checking of declaration files
    "strict": true, // Enable strict type-checking
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "noEmit": true, // Do not emit compiled files
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "moduleResolution": "Node", // Resolve modules using Node.js
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure each file can be compiled separately
    "jsx": "preserve", // Keep JSX as-is for Next.js
    "incremental": true, // Enable incremental compilation for faster builds
    "baseUrl": ".", // Base directory for non-relative module imports
    "paths": {
      "@/*": [
        "src/*"
      ] // Alias for the `src` directory
    },
    "module": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ], // Include files for the project
  "exclude": [
    "node_modules"
  ] // Exclude dependencies from compilation
}
